params {
    executor = "local"
    
    outdir = "mpx_consensus"
    fastq = "fastq/*_{R1_001,R2_001}.fastq.gz"
    
    reference = "mpx_us_22.fasta"
    host_index = "chm13v2_sr.mmi"

    consensus_assembly = true
    reference_assembly = false
    denovo_assembly = false
    host_depletion = false

    mpileup_max_depth = 10000

    ivar_consensus_min_qual = 20
    ivar_consensus_min_freq = 0.75
    ivar_consensus_min_depth = 10
    ivar_consensus_fill_char = "N"

    spades_opts = "--isolate"

    extract_min_qaln_len = 50
    extract_min_mapq = 0

    host_deplete_min_qaln_len = 50
    host_deplete_min_mapq = 0

    // Conda handlers

    mamba = false
    micromamba = false

    // Resource configs

    fastp_cpus = 8
    fastp_mem = "32GB"
    fastp_time = "8h"
    fastp_conda = "$baseDir/envs/fastp.yml"

    minimap2_cpus = 8
    minimap2_mem = "16GB"
    minimap2_time = "8h"
    minimap2_conda = "$baseDir/envs/minimap2.yml"

    minimap2_host_cpus = 32
    minimap2_host_mem = "64GB"
    minimap2_host_time = "24h"
    minimap2_host_conda = "$baseDir/envs/minimap2.yml"

    spades_cpus = 8
    spades_mem = "32GB"
    spades_time = "8h"
    spades_conda = "$baseDir/envs/spades.yml"

    mgp_tools_cpus = 1
    mgp_tools_mem = "16GB"
    mgp_tools_time = "1h"
    mgp_tools_conda = "$HOME/conda/envs/mgp-tools"

    ivar_cpus = 1
    ivar_mem = "16GB"
    ivar_time = "2h"
    ivar_conda = "$baseDir/envs/ivar.yml"

}

profiles {
  conda {
      conda.useMamba = params.mamba
      conda.useMicromamba = params.micromamba
  }
}

process {
    
    executor = params.executor

    withLabel: fastp {
        cpus = params.fastp_cpus
        memory = params.fastp_mem
        time = params.fastp_time
        conda = params.fastp_conda
    }

    withLabel: minimap2 {
        cpus = params.minimap2_cpus
        memory = params.minimap2_mem
        time = params.minimap2_time
        conda = params.minimap2_conda
    }

    withLabel: minimap2_host {
        cpus = params.minimap2_host_cpus
        memory = params.minimap2_host_mem
        time = params.minimap2_host_time
        conda = params.minimap2_host_conda
    }

    withLabel: spades {
        cpus = params.spades_cpus
        memory = params.spades_mem
        time = params.spades_time
        conda = params.spades_conda
        errorStrategy = "ignore"
    }

    withLabel: mgp_tools {
        cpus = params.mgp_tools_cpus
        memory = params.mgp_tools_mem
        time = params.mgp_tools_time
        conda = params.mgp_tools_conda
    }

    withLabel: ivar {
        cpus = params.ivar_cpus
        memory = params.ivar_mem
        time = params.ivar_time
        conda = params.ivar_conda
    }


}
